<Page x:Class="FP_PEMROGLANJUT.View.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FP_PEMROGLANJUT.View"
      mc:Ignorable="d" 
      d:DesignHeight="585" d:DesignWidth="992"
      Title="HomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <Border Grid.Column="1" Grid.Row="1" Background="#14279B" CornerRadius="10">
                <Grid>
                    <DockPanel Grid.Row="1" x:Name="menuIsiUlangUtama" Height="90" Style="{DynamicResource MenuDockPanel}" MouseDown="menuIsiUlangUtama_MouseDown" Margin="0,30,0,30" Grid.Column="1">
                        <Image Width="60" Height="60"
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            Source="/Images/isiulang.png"/>
                    </DockPanel>
                </Grid>
            </Border>

            <Border Grid.Column="3" Grid.Row="1" Background="#14279B" CornerRadius="10">
                <Grid>
                    <DockPanel Grid.Row="2" x:Name="menuTagihanUtama" Height="90" Style="{DynamicResource MenuDockPanel}" MouseDown="menuTagihanUtama_MouseDown">
                        <Image Width="60" Height="60"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Source="/Images/tagihan.png"/>
                    </DockPanel>
                </Grid>
            </Border>

            <Border Grid.Column="5" Grid.Row="1" Background="#14279B" CornerRadius="10">
                <Grid>
                    <DockPanel Grid.Row="1" x:Name="menuTagihanUtama_Copy" Height="90" Style="{DynamicResource MenuDockPanel}" MouseDown="menuTagihanUtama_MouseDown" Margin="0,30,0,30" Grid.Column="5">
                        <Image Width="60" Height="60"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Source="/Images/hiburan.png"/>
                    </DockPanel>
                </Grid>
            </Border>
        </Grid>
        <Label Content="SELAMAT DATANG" Foreground="White" FontSize="36" Margin="0,80,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Righteous"/>
        <Label Content="DI APLIKASI PAYME" Foreground="White" FontSize="36" Margin="0,130,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Righteous"/>
        <Label Content="Budi Perkasa - Shift 1" Foreground="#FFD8CEFF" FontSize="18" Margin="0,220,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Righteous"/>
    </Grid>
</Page>
